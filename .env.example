# Example environment variables for SolCraft Nexus

#############################
# Backend configuration
#############################

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
# Optional: use a service role key if required
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Authentication
JWT_SECRET=change-me

# XRPL endpoints
XRPL_MAINNET_URL=wss://xrplcluster.com
XRPL_TESTNET_URL=wss://s.altnet.rippletest.net:51233
XRPL_DEVNET_URL=wss://s.devnet.rippletest.net:51233

# Application
DEFAULT_NETWORK=testnet
API_BASE_URL=https://your-backend.example.com/api
FRONTEND_URL=https://your-frontend.example.com
BCRYPT_ROUNDS=12
SESSION_DURATION=7d
KYC_REQUIRED=true
AUDIT_ENABLED=true

#############################
# Frontend configuration
#############################

VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key
VITE_XUMM_API_KEY=your-xumm-api-key
VITE_WEB3AUTH_CLIENT_ID=your-web3auth-client-id
VITE_XRPL_SERVER=wss://s.altnet.rippletest.net:51233
VITE_ISSUER_ADDRESS=
VITE_ISSUER_SECRET=
VITE_ENVIRONMENT=development

