# Example environment variables for SolCraft Nexus

# -------------------------------------------------------------------
# Backend configuration
# -------------------------------------------------------------------
SUPABASE_URL=https://your-supabase-url.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
JWT_SECRET=your-jwt-secret
XRPL_MAINNET_URL=wss://xrplcluster.com
XRPL_TESTNET_URL=wss://s.altnet.rippletest.net:51233
XRPL_DEVNET_URL=wss://s.devnet.rippletest.net:51233
DEFAULT_NETWORK=testnet
API_BASE_URL=https://your-api-host.com/api
FRONTEND_URL=https://your-frontend-host.com
BCRYPT_ROUNDS=12
SESSION_DURATION=7d
KYC_REQUIRED=true
AUDIT_ENABLED=true

# Python backend
SECRET_KEY=your-flask-secret-key
DATABASE_URL=postgresql://user:password@host:5432/database
JWT_SECRET_KEY=your-flask-jwt-secret
XRPL_SERVER=wss://s.devnet.rippletest.net:51233
XRPL_EXPLORER=https://devnet.xrpl.org
REDIS_URL=redis://localhost:6379/0
CORS_ORIGINS=*

# -------------------------------------------------------------------
# Frontend configuration
# -------------------------------------------------------------------
REACT_APP_XUMM_API_KEY=your-xumm-api-key-here
REACT_APP_XUMM_API_SECRET=your-xumm-api-secret-here
REACT_APP_CROSSMARK_NETWORK=mainnet
REACT_APP_WEB3AUTH_CLIENT_ID=your-web3auth-client-id-here
REACT_APP_XRPL_NETWORK=wss://xrpl.ws
REACT_APP_XRPL_TESTNET=wss://s.altnet.rippletest.net:51233
REACT_APP_SUPABASE_URL=https://your-supabase-url-here
REACT_APP_SUPABASE_ANON_KEY=your-supabase-anon-key-here
REACT_APP_API_BASE_URL=https://your-api-base-url/api

# Vite frontend (frontend/ directory)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key
VITE_XUMM_API_KEY=your-xumm-api-key
VITE_ENVIRONMENT=development
